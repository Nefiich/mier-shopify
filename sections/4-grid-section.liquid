{% style %}
  .category-banner {
    display: flex;
    width: 100%;
    min-height: 400px;
  }

  .category-banner__item {
    flex: 1;
    position: relative;
    overflow: hidden;
    display: flex;
    align-items: center;
    justify-content: center;
    min-height: 400px;
  }

  .category-banner__image {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .category-banner__item:hover .category-banner__image {
    transform: scale(1.05);
  }

  .category-banner__content {
    position: relative;
    z-index: 2;
    text-align: center;
    padding: 20px;
  }

  .category-banner__title {
    color: #ffffff;
    font-size: 32px;
    font-weight: 700;
    letter-spacing: 2px;
    margin-bottom: 20px;
    text-transform: uppercase;
    text-shadow: 0 2px 4px rgba(0, 0, 0, 0.3);
  }

  .category-banner__button {
    display: inline-block;
    background: linear-gradient(135deg, #ff6ec7, #ff8ec7);
    color: #ffffff;
    padding: 12px 30px;
    border-radius: 25px;
    text-decoration: none;
    font-weight: 600;
    font-size: 14px;
    text-transform: uppercase;
    letter-spacing: 1px;
    transition: all 0.3s ease;
    box-shadow: 0 4px 15px rgba(255, 110, 199, 0.3);
  }

  .category-banner__button:hover {
    background: linear-gradient(135deg, #ff5bb8, #ff7ab8);
    transform: translateY(-2px);
    box-shadow: 0 6px 20px rgba(255, 110, 199, 0.4);
  }

  .category-banner__overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.2);
    z-index: 1;
  }

  @media screen and (max-width: 768px) {
    .category-banner {
      flex-direction: column;
    }

    .category-banner__item {
      min-height: 300px;
    }

    .category-banner__title {
      font-size: 24px;
    }
  }
{% endstyle %}

<div class="category-banner">
  {% for block in section.blocks %}
    {% if block.settings.image != blank %}
      <div class="category-banner__item" {{ block.shopify_attributes }}>
        {{ block.settings.image | image_url: width: 1200 | image_tag: 
           loading: 'lazy',
           class: 'category-banner__image',
           alt: block.settings.title }}
        <div class="category-banner__overlay"></div>
        <div class="category-banner__content">
          {% if block.settings.title != blank %}
            <h2 class="category-banner__title">{{ block.settings.title }}</h2>
          {% endif %}
          {% if block.settings.link != blank %}
            <a href="{{ block.settings.link }}" class="category-banner__button">
              {{ block.settings.button_text }}
            </a>
          {% endif %}
        </div>
      </div>
    {% endif %}
  {% endfor %}
</div>

