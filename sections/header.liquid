    --header-logo: {{ section.settings.logo_height | default: 50 }}px;
  }
  @media screen and (max-width: 480px) {
    :root {
      --header-logo: {{ section.settings.mobile_logo_height | default: 30 }}px;
    }
  }

  header-drawer {
    justify-self: start;
    margin-left: -1.2rem;
  }

