    padding: 0;
    margin: 0;
    display: flex;
    align-items: center;
    gap: {{ section.settings.menu_spacing | default: 30 }}px;
  }

  .list-menu--inline {
    display: inline-flex;
    flex-wrap: wrap;
  }

  summary.list-menu__item {
    padding-right: 2.7rem;
  }

  .list-menu__item {
    display: flex;
    align-items: center;
    line-height: calc(1 + 0.3 / var(--font-body-scale));
    position: relative;
  }

  .list-menu__item--link {
    text-decoration: none;
    color: {{ section.settings.menu_color | default: '#000000' }};
    font-weight: {{ section.settings.menu_font_weight | default: 500 }};
    font-size: {{ section.settings.menu_font_size | default: 14 }}px;
    text-transform: {{ section.settings.menu_text_transform | default: 'uppercase' }};
    letter-spacing: {{ section.settings.menu_letter_spacing | default: '0.5px' }};
    padding: 10px 0;
    transition: color 0.3s ease;
    display: flex;
    align-items: center;
    gap: 5px;
  }

  .list-menu__item--link:hover {
    color: {{ section.settings.menu_hover_color | default: '#666666' }};
  }

  .underline-animation {
    position: relative;
  }

  .underline-animation::after {
    content: '';
    position: absolute;
    bottom: -2px;
    left: 0;
    width: 0;
    height: 2px;
    background: {{ section.settings.menu_hover_color | default: '#666666' }};
    transition: width 0.3s ease;
  }

  .list-menu__item--link:hover .underline-animation::after {
    width: 100%;
  }

  .list-menu__item .icon svg {
    width: 11px;
    height: 7px;
    transition: transform 0.3s ease;
  }

  .list-menu__item:hover .icon svg {
    transform: rotate(180deg);
  }

  /* Dropdown styles */
  .list-menu__item .list-menu {
    position: absolute;
    top: 100%;
    left: 0;
    background: {{ section.settings.dropdown_bg_color | default: '#ffffff' }};
    border: 1px solid {{ section.settings.border_color | default: '#e5e5e5' }};
    border-radius: {{ section.settings.dropdown_border_radius | default: 4 }}px;
    box-shadow: 0 4px 20px rgba(0,0,0,0.1);
    min-width: 200px;
    opacity: 0;
    visibility: hidden;
    transform: translateY(-10px);
    transition: all 0.3s ease;
    z-index: 1000;
    flex-direction: column;
    gap: 0;
    padding: 10px 0;
  }

  .list-menu__item:hover .list-menu {
    opacity: 1;
    visibility: visible;
    transform: translateY(0);
  }

  .list-menu .list-menu__item .list-menu__item--link {
    padding: 8px 20px;
    font-size: 13px;
    font-weight: 400;
    text-transform: none;
    letter-spacing: normal;
  }

  .list-menu .list-menu__item .list-menu__item--link:hover {
    background: {{ section.settings.dropdown_hover_bg | default: '#f5f5f5' }};
  }

  /* Badge styles */
  .menu-badge {
    background: {{ section.settings.badge_bg_color | default: '#f292ad' }};
    color: {{ section.settings.badge_text_color | default: '#ffffff' }};
    padding: 2px 6px;
    border-radius: 3px;
    font-size: 10px;
    font-weight: bold;
    margin-left: 5px;
  }

  @media screen and (min-width: 750px) {
    .list-menu__item--link {
      padding-bottom: 0.5rem;
      padding-top: 0.5rem;
    }
  }

  /* Header styling to match your design */
  .header {
    background: {{ section.settings.header_bg_color | default: '#ffffff' }};
    border-bottom: 1px solid {{ section.settings.border_color | default: '#e5e5e5' }};
    transition: all 0.3s ease;
  }

  .header--middle-left {
    display: flex;
    align-items: center;
    justify-content: space-between;
    max-width: {{ section.settings.max_width | default: 1200 }}px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .header__heading-logo-wrapper {
    height: var(--header-logo);
    display: flex;
    align-items: center;
  }

  .header__heading-logo {
    max-height: var(--header-logo);
    width: auto;
  }

  .header__icons {
    display: flex;
    align-items: center;
    gap: 20px;
  }

  .header__icon svg {
    width: 20px;
    height: 20px;
    stroke: {{ section.settings.icon_color | default: '#000000' }};
    fill: {{ section.settings.icon_color | default: '#000000' }};
  }

  .header__icon:hover svg {
    stroke: {{ section.settings.icon_hover_color | default: '#666666' }};
    fill: {{ section.settings.icon_hover_color | default: '#666666' }};
  }

