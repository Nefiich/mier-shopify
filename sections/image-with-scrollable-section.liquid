{% comment %}
  Split Collection Showcase Section
  - Left: Featured Image
  - Right: Scrollable Collection Products
{% endcomment %}

<style>
  .split-collection-section {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 0;
    height: 100vh;
    overflow: hidden;
  }

  .split-collection__left {
    position: relative;
    overflow: hidden;
    height: 100vh;
  }

  .split-collection__left img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  .split-collection__right {
    background: #f5f5f5;
    overflow-y: auto;
    overflow-x: hidden;
    padding: 60px 40px;
    display: flex;
    flex-direction: column;
    gap: 40px;
    scroll-behavior: smooth;
    position: relative;
  }

  .split-collection__product {
    background: white;
    border-radius: 8px;
    overflow: hidden;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    cursor: pointer;
    margin: 0 20px;
    scroll-snap-align: start;
  }

  .split-collection__product:hover {
    transform: translateY(-5px);
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
  }

  .split-collection__product-image {
    width: 100%;
    aspect-ratio: 3/4;
    overflow: hidden;
    background: #f9f9f9;
  }

  .split-collection__product-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  .split-collection__product-info {
    padding: 20px;
  }

  .split-collection__product-title {
    font-size: 16px;
    font-weight: 600;
    margin: 0 0 8px 0;
    color: #333;
  }

  .split-collection__product-price {
    font-size: 18px;
    font-weight: 700;
    color: #000;
  }

  .split-collection__product-compare-price {
    font-size: 14px;
    color: #999;
    text-decoration: line-through;
    margin-left: 8px;
  }

  /* Scrollbar styling */
  .split-collection__right::-webkit-scrollbar {
    width: 8px;
  }

  .split-collection__right::-webkit-scrollbar-track {
    background: #e0e0e0;
  }

  .split-collection__right::-webkit-scrollbar-thumb {
    background: #999;
    border-radius: 4px;
  }

  .split-collection__right::-webkit-scrollbar-thumb:hover {
    background: #666;
  }

  /* Scroll Indicators */
  .split-collection__indicators {
    position: fixed;
    right: 20px;
    top: 50%;
    transform: translateY(-50%);
    display: flex;
    flex-direction: column;
    gap: 12px;
    z-index: 10;
  }

  .split-collection__indicator-dot {
    width: 10px;
    height: 10px;
    border-radius: 50%;
    background: #ccc;
    cursor: pointer;
    transition: all 0.3s ease;
    border: 2px solid transparent;
  }

  .split-collection__indicator-dot:hover {
    background: #999;
    transform: scale(1.2);
  }

  .split-collection__indicator-dot.active {
    background: #333;
    transform: scale(1.3);
    border-color: #666;
  }

  /* Responsive */
  @media (max-width: 768px) {
    .split-collection-section {
      grid-template-columns: 1fr;
      height: auto;
    }

    .split-collection__left {
      min-height: 60vh;
      height: 60vh;
    }

    .split-collection__right {
      max-height: none;
      padding: 30px 20px;
    }

    .split-collection__product {
      margin: 0 10px;
    }

    .split-collection__indicators {
      right: 10px;
    }
  }
</style>

<div class="split-collection-section">
  <!-- Left Side: Featured Image -->
  <div class="split-collection__left">
    {% if section.settings.featured_image %}
      <img 
        src="{{ section.settings.featured_image | img_url: '1200x' }}" 
        alt="{{ section.settings.featured_image.alt | escape }}"
        loading="lazy"
      >
    {% else %}
      {{ 'lifestyle-1' | placeholder_svg_tag: 'placeholder-svg' }}
    {% endif %}
  </div>

  <!-- Right Side: Collection Products -->
  <div class="split-collection__right" id="split-collection-scroll">
    {% if section.settings.collection != blank %}
      {% assign collection = collections[section.settings.collection] %}
      {% assign products_to_show = section.settings.products_count | default: 4 %}
      
      {% for product in collection.products limit: products_to_show %}
        <a href="{{ product.url }}" class="split-collection__product" data-product-index="{{ forloop.index0 }}">
          <div class="split-collection__product-image">
            {% if product.featured_image %}
              <img 
                src="{{ product.featured_image | img_url: '600x' }}" 
                alt="{{ product.featured_image.alt | escape }}"
                loading="lazy"
              >
            {% else %}
              {{ 'product-1' | placeholder_svg_tag: 'placeholder-svg' }}
            {% endif %}
          </div>
          
          <div class="split-collection__product-info">
            <h3 class="split-collection__product-title">{{ product.title }}</h3>
            <div class="split-collection__product-price">
              {{ product.price | money }}
              {% if product.compare_at_price > product.price %}
                <span class="split-collection__product-compare-price">
                  {{ product.compare_at_price | money }}
                </span>
              {% endif %}
            </div>
          </div>
        </a>
      {% endfor %}
    {% else %}
      <div style="text-align: center; padding: 40px; color: #999;">
        <p>Please select a collection in the section settings.</p>
      </div>
    {% endif %}
  </div>

  <!-- Scroll Indicators -->
  {% if section.settings.collection != blank %}
    <div class="split-collection__indicators" id="scroll-indicators">
      {% assign products_to_show = section.settings.products_count | default: 4 %}
      {% for product in collections[section.settings.collection].products limit: products_to_show %}
        <div class="split-collection__indicator-dot {% if forloop.first %}active{% endif %}" 
             data-index="{{ forloop.index0 }}"
             onclick="scrollToProduct({{ forloop.index0 }})"></div>
      {% endfor %}
    </div>
  {% endif %}
</div>

<script>
  (function() {
    const scrollContainer = document.getElementById('split-collection-scroll');
    const indicators = document.querySelectorAll('.split-collection__indicator-dot');
    const products = document.querySelectorAll('.split-collection__product');

    if (!scrollContainer || !indicators.length || !products.length) return;

    // Update active indicator based on scroll position
    function updateActiveIndicator() {
      const scrollTop = scrollContainer.scrollTop;
      const containerHeight = scrollContainer.clientHeight;
      
      let activeIndex = 0;
      let minDistance = Infinity;

      products.forEach((product, index) => {
        const productTop = product.offsetTop - scrollContainer.offsetTop;
        const productMiddle = productTop + (product.offsetHeight / 2);
        const viewportMiddle = scrollTop + (containerHeight / 2);
        const distance = Math.abs(productMiddle - viewportMiddle);

        if (distance < minDistance) {
          minDistance = distance;
          activeIndex = index;
        }
      });

      indicators.forEach((dot, index) => {
        if (index === activeIndex) {
          dot.classList.add('active');
        } else {
          dot.classList.remove('active');
        }
      });
    }

    // Scroll to specific product
    window.scrollToProduct = function(index) {
      if (products[index]) {
        const productTop = products[index].offsetTop - scrollContainer.offsetTop;
        scrollContainer.scrollTo({
          top: productTop - 60,
          behavior: 'smooth'
        });
      }
    };

    // Listen for scroll events
    scrollContainer.addEventListener('scroll', updateActiveIndicator);

    // Initial update
    updateActiveIndicator();
  })();
</script>

{% schema %}
{
  "name": "Split Collection Showcase",
  "settings": [
    {
      "type": "image_picker",
      "id": "featured_image",
      "label": "Featured Image (Left Side)",
      "info": "Recommended size: 800x1000px"
    },
    {
      "type": "collection",
      "id": "collection",
      "label": "Collection"
    },
    {
      "type": "range",
      "id": "products_count",
      "min": 2,
      "max": 12,
      "step": 1,
      "default": 4,
      "label": "Number of products to show"
    }
  ],
  "presets": [
    {
      "name": "Split Collection Showcase"
    }
  ]
}
{% endschema %}