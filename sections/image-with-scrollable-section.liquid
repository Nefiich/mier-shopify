{% comment %}
  Split Collection Showcase Section
  - Left: Featured Image (Full Height)
  - Right: Horizontal Scrollable Products with Dot Navigation
{% endcomment %}

<style>
  .split-collection-section {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 0;
    height: 100vh;
    overflow: hidden;
  }

  .split-collection__left {
    position: relative;
    overflow: hidden;
    height: 100vh;
  }

  .split-collection__left img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  .split-collection__right {
    background: #f5f5f5;
    overflow-x: auto;
    overflow-y: hidden;
    display: flex;
    scroll-snap-type: x mandatory;
    scroll-behavior: smooth;
    position: relative;
  }

  .split-collection__right::-webkit-scrollbar {
    display: none;
  }

  .split-collection__right {
    -ms-overflow-style: none;
    scrollbar-width: none;
  }

  .split-collection__product {
    min-width: 100%;
    height: 100%;
    scroll-snap-align: start;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 60px;
    box-sizing: border-box;
    text-decoration: none;
  }

  .split-collection__product-inner {
    background: white;
    border-radius: 12px;
    overflow: hidden;
    max-width: 500px;
    width: 100%;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
  }

  .split-collection__product:hover .split-collection__product-inner {
    transform: translateY(-8px);
    box-shadow: 0 12px 40px rgba(0, 0, 0, 0.15);
  }

  .split-collection__product-image {
    width: 100%;
    aspect-ratio: 3/4;
    overflow: hidden;
    background: #f9f9f9;
  }

  .split-collection__product-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  .split-collection__product-info {
    padding: 24px;
  }

  .split-collection__product-title {
    font-size: 18px;
    font-weight: 600;
    margin: 0 0 12px 0;
    color: #333;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .split-collection__product-price {
    font-size: 20px;
    font-weight: 700;
    color: #000;
  }

  .split-collection__product-compare-price {
    font-size: 16px;
    color: #999;
    text-decoration: line-through;
    margin-left: 10px;
  }

  /* Scroll Indicators */
  .split-collection__indicators {
    position: absolute;
    bottom: 40px;
    left: 50%;
    transform: translateX(-50%);
    display: flex;
    gap: 12px;
    z-index: 10;
    background: rgba(255, 255, 255, 0.9);
    padding: 12px 20px;
    border-radius: 30px;
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
  }

  .split-collection__indicator-dot {
    width: 10px;
    height: 10px;
    border-radius: 50%;
    background: #ccc;
    cursor: pointer;
    transition: all 0.3s ease;
    border: 2px solid transparent;
  }

  .split-collection__indicator-dot:hover {
    background: #999;
    transform: scale(1.2);
  }

  .split-collection__indicator-dot.active {
    background: #333;
    transform: scale(1.3);
    width: 12px;
    height: 12px;
  }

  /* Responsive */
  @media (max-width: 968px) {
    .split-collection-section {
      grid-template-columns: 1fr;
      height: auto;
    }

    .split-collection__left {
      height: 60vh;
      min-height: 400px;
    }

    .split-collection__right {
      height: 70vh;
      min-height: 500px;
    }

    .split-collection__product {
      padding: 40px 30px;
    }

    .split-collection__indicators {
      bottom: 20px;
    }
  }

  @media (max-width: 640px) {
    .split-collection__product {
      padding: 30px 20px;
    }

    .split-collection__product-inner {
      max-width: 100%;
    }
  }
</style>

<div class="split-collection-section">
  <!-- Left Side: Featured Image -->
  <div class="split-collection__left">
    {% if section.settings.featured_image %}
      <img 
        src="{{ section.settings.featured_image | img_url: '1200x' }}" 
        alt="{{ section.settings.featured_image.alt | escape }}"
        loading="lazy"
      >
    {% else %}
      {{ 'lifestyle-1' | placeholder_svg_tag: 'placeholder-svg' }}
    {% endif %}
  </div>

  <!-- Right Side: Horizontal Scrollable Products -->
  <div class="split-collection__right" id="split-collection-scroll">
    {% if section.settings.collection != blank %}
      {% assign collection = collections[section.settings.collection] %}
      {% assign products_to_show = section.settings.products_count | default: 4 %}
      
      {% for product in collection.products limit: products_to_show %}
        <a href="{{ product.url }}" class="split-collection__product" data-product-index="{{ forloop.index0 }}">
          <div class="split-collection__product-inner">
            <div class="split-collection__product-image">
              {% if product.featured_image %}
                <img 
                  src="{{ product.featured_image | img_url: '800x' }}" 
                  alt="{{ product.featured_image.alt | escape }}"
                  loading="lazy"
                >
              {% else %}
                {{ 'product-1' | placeholder_svg_tag: 'placeholder-svg' }}
              {% endif %}
            </div>
            
            <div class="split-collection__product-info">
              <h3 class="split-collection__product-title">{{ product.title }}</h3>
              <div class="split-collection__product-price">
                {{ product.price | money }}
                {% if product.compare_at_price > product.price %}
                  <span class="split-collection__product-compare-price">
                    {{ product.compare_at_price | money }}
                  </span>
                {% endif %}
              </div>
            </div>
          </div>
        </a>
      {% endfor %}

      <!-- Scroll Indicators -->
      <div class="split-collection__indicators" id="scroll-indicators">
        {% for product in collection.products limit: products_to_show %}
          <div class="split-collection__indicator-dot {% if forloop.first %}active{% endif %}" 
               data-index="{{ forloop.index0 }}"
               onclick="scrollToProduct({{ forloop.index0 }})"></div>
        {% endfor %}
      </div>
    {% else %}
      <div style="display: flex; align-items: center; justify-content: center; width: 100%; text-align: center; padding: 40px; color: #999;">
        <p>Please select a collection in the section settings.</p>
      </div>
    {% endif %}
  </div>
</div>

<script>
  (function() {
    const scrollContainer = document.getElementById('split-collection-scroll');
    const indicators = document.querySelectorAll('.split-collection__indicator-dot');
    const products = document.querySelectorAll('.split-collection__product');

    if (!scrollContainer || !indicators.length || !products.length) return;

    // Update active indicator based on scroll position
    function updateActiveIndicator() {
      const scrollLeft = scrollContainer.scrollLeft;
      const containerWidth = scrollContainer.clientWidth;
      const currentIndex = Math.round(scrollLeft / containerWidth);

      indicators.forEach((dot, index) => {
        if (index === currentIndex) {
          dot.classList.add('active');
        } else {
          dot.classList.remove('active');
        }
      });
    }

    // Scroll to specific product
    window.scrollToProduct = function(index) {
      if (products[index]) {
        const containerWidth = scrollContainer.clientWidth;
        scrollContainer.scrollTo({
          left: index * containerWidth,
          behavior: 'smooth'
        });
      }
    };

    // Listen for scroll events
    let scrollTimeout;
    scrollContainer.addEventListener('scroll', function() {
      clearTimeout(scrollTimeout);
      scrollTimeout = setTimeout(updateActiveIndicator, 50);
    });

    // Snap to nearest product on scroll end
    scrollContainer.addEventListener('scroll', function() {
      clearTimeout(scrollTimeout);
      scrollTimeout = setTimeout(function() {
        const containerWidth = scrollContainer.clientWidth;
        const scrollLeft = scrollContainer.scrollLeft;
        const nearestIndex = Math.round(scrollLeft / containerWidth);
        scrollToProduct(nearestIndex);
      }, 150);
    });

    // Initial update
    updateActiveIndicator();

    // Handle touch/swipe on mobile
    let touchStartX = 0;
    let touchEndX = 0;

    scrollContainer.addEventListener('touchstart', function(e) {
      touchStartX = e.changedTouches[0].screenX;
    }, { passive: true });

    scrollContainer.addEventListener('touchend', function(e) {
      touchEndX = e.changedTouches[0].screenX;
      handleSwipe();
    }, { passive: true });

    function handleSwipe() {
      const swipeThreshold = 50;
      const diff = touchStartX - touchEndX;
      
      if (Math.abs(diff) > swipeThreshold) {
        const currentIndex = Math.round(scrollContainer.scrollLeft / scrollContainer.clientWidth);
        
        if (diff > 0 && currentIndex < products.length - 1) {
          scrollToProduct(currentIndex + 1);
        } else if (diff < 0 && currentIndex > 0) {
          scrollToProduct(currentIndex - 1);
        }
      }
    }
  })();
</script>

{% schema %}
{
  "name": "Split Collection Showcase",
  "settings": [
    {
      "type": "image_picker",
      "id": "featured_image",
      "label": "Featured Image (Left Side)",
      "info": "Recommended size: 800x1000px"
    },
    {
      "type": "collection",
      "id": "collection",
      "label": "Collection"
    },
    {
      "type": "range",
      "id": "products_count",
      "min": 2,
      "max": 12,
      "step": 1,
      "default": 4,
      "label": "Number of products to show"
    }
  ],
  "presets": [
    {
      "name": "Split Collection Showcase"
    }
  ]
}
{% endschema %}