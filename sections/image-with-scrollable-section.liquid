{% comment %}
  Split Collection Showcase Section
  - Left: Featured Image
  - Right: Scrollable Collection Products
{% endcomment %}

<style>
  .split-collection-section {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 0;
    min-height: 600px;
    max-height: 800px;
    overflow: hidden;
  }

  .split-collection__left {
    position: relative;
    overflow: hidden;
  }

  .split-collection__left img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  .split-collection__right {
    background: #f5f5f5;
    overflow-y: auto;
    overflow-x: hidden;
    padding: 40px 30px;
    display: grid;
    grid-template-columns: 1fr;
    gap: 30px;
    align-content: start;
  }

  .split-collection__product {
    background: white;
    border-radius: 8px;
    overflow: hidden;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    cursor: pointer;
  }

  .split-collection__product:hover {
    transform: translateY(-5px);
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
  }

  .split-collection__product-image {
    width: 100%;
    aspect-ratio: 3/4;
    overflow: hidden;
    background: #f9f9f9;
  }

  .split-collection__product-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  .split-collection__product-info {
    padding: 20px;
  }

  .split-collection__product-title {
    font-size: 16px;
    font-weight: 600;
    margin: 0 0 8px 0;
    color: #333;
  }

  .split-collection__product-price {
    font-size: 18px;
    font-weight: 700;
    color: #000;
  }

  .split-collection__product-compare-price {
    font-size: 14px;
    color: #999;
    text-decoration: line-through;
    margin-left: 8px;
  }

  /* Scrollbar styling */
  .split-collection__right::-webkit-scrollbar {
    width: 8px;
  }

  .split-collection__right::-webkit-scrollbar-track {
    background: #e0e0e0;
  }

  .split-collection__right::-webkit-scrollbar-thumb {
    background: #999;
    border-radius: 4px;
  }

  .split-collection__right::-webkit-scrollbar-thumb:hover {
    background: #666;
  }

  /* Responsive */
  @media (max-width: 768px) {
    .split-collection-section {
      grid-template-columns: 1fr;
      max-height: none;
      min-height: auto;
    }

    .split-collection__left {
      min-height: 400px;
      max-height: 500px;
    }

    .split-collection__right {
      max-height: 600px;
      padding: 30px 20px;
    }
  }
</style>

<div class="split-collection-section">
  <!-- Left Side: Featured Image -->
  <div class="split-collection__left">
    {% if section.settings.featured_image %}
      <img 
        src="{{ section.settings.featured_image | img_url: '1200x' }}" 
        alt="{{ section.settings.featured_image.alt | escape }}"
        loading="lazy"
      >
    {% else %}
      {{ 'lifestyle-1' | placeholder_svg_tag: 'placeholder-svg' }}
    {% endif %}
  </div>

  <!-- Right Side: Collection Products -->
  <div class="split-collection__right">
    {% if section.settings.collection != blank %}
      {% assign collection = collections[section.settings.collection] %}
      {% assign products_to_show = section.settings.products_count | default: 4 %}
      
      {% for product in collection.products limit: products_to_show %}
        <a href="{{ product.url }}" class="split-collection__product">
          <div class="split-collection__product-image">
            {% if product.featured_image %}
              <img 
                src="{{ product.featured_image | img_url: '600x' }}" 
                alt="{{ product.featured_image.alt | escape }}"
                loading="lazy"
              >
            {% else %}
              {{ 'product-1' | placeholder_svg_tag: 'placeholder-svg' }}
            {% endif %}
          </div>
          
          <div class="split-collection__product-info">
            <h3 class="split-collection__product-title">{{ product.title }}</h3>
            <div class="split-collection__product-price">
              {{ product.price | money }}
              {% if product.compare_at_price > product.price %}
                <span class="split-collection__product-compare-price">
                  {{ product.compare_at_price | money }}
                </span>
              {% endif %}
            </div>
          </div>
        </a>
      {% endfor %}
    {% else %}
      <div style="text-align: center; padding: 40px; color: #999;">
        <p>Please select a collection in the section settings.</p>
      </div>
    {% endif %}
  </div>
</div>

{% schema %}
{
  "name": "Split Collection Showcase",
  "settings": [
    {
      "type": "image_picker",
      "id": "featured_image",
      "label": "Featured Image (Left Side)",
      "info": "Recommended size: 800x1000px"
    },
    {
      "type": "collection",
      "id": "collection",
      "label": "Collection"
    },
    {
      "type": "range",
      "id": "products_count",
      "min": 2,
      "max": 12,
      "step": 1,
      "default": 4,
      "label": "Number of products to show"
    }
  ],
  "presets": [
    {
      "name": "Split Collection Showcase"
    }
  ]
}
{% endschema %}