      font-size: {{ section.settings.extra_small_title_size }}px;
    }
  }

  /* Landscape Mobile Orientation */
  @media (max-height: 500px) and (orientation: landscape) {
    .section-{{ section.id }}.four-grid-container {
      {% if section.settings.landscape_height_override %}
        height: auto;
        min-height: {{ section.settings.landscape_min_height }}px;
      {% endif %}
    }
    
    .section-{{ section.id }} .featured-item {
      min-height: {{ section.settings.landscape_featured_height }}px;
    }
  }
</style>

