{% doc %}
  @prompt
    Create a Custom Liquid section that displays "NEW COLLECTION" as the first item, followed by a list of products. The "NEW COLLECTION" should be prominently displayed as a header or featured item, with products listed below it in an organized layout.

{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-new-collection-{{ ai_gen_id }} {
    padding: {{ block.settings.section_padding }}px 0;
    background-color: {{ block.settings.background_color }};
  }

  .ai-new-collection-container-{{ ai_gen_id }} {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .ai-new-collection-header-{{ ai_gen_id }} {
    text-align: {{ block.settings.header_alignment }};
    margin-bottom: {{ block.settings.header_spacing }}px;
    padding: {{ block.settings.header_padding }}px;
    background-color: {{ block.settings.header_background_color }};
    border-radius: {{ block.settings.header_border_radius }}px;
  }

  .ai-new-collection-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.header_font_size }}px;
    color: {{ block.settings.header_text_color }};
    margin: 0;
    font-weight: {{ block.settings.header_font_weight }};
    letter-spacing: {{ block.settings.header_letter_spacing }}px;text-transform: {{ block.settings.header_text_transform }};
  }

  .ai-new-collection-subtitle-{{ ai_gen_id }} {
    font-size: {{ block.settings.subtitle_font_size }}px;
    color: {{ block.settings.subtitle_text_color }};
    margin: 8px 0 0;
  }

  .ai-new-collection-products-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: {{ block.settings.product_spacing }}px;
    margin-top: {{ block.settings.products_top_spacing }}px;
  }

  .ai-new-collection-product-{{ ai_gen_id }} {
    background-color: {{ block.settings.product_card_background }};
    border-radius: {{ block.settings.product_card_radius }}px;
    padding: {{ block.settings.product_card_padding }}px;
    text-align: {{ block.settings.product_text_alignment }};
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    border: {{ block.settings.product_card_border_width }}px solid {{ block.settings.product_card_border_color }};
  }

  .ai-new-collection-product-{{ ai_gen_id }}:hover {
    transform: translateY(-{{ block.settings.hover_lift }}px);
    box-shadow: 0 {{ block.settings.hover_shadow_blur }}px {{ block.settings.hover_shadow_spread }}px rgba(0, 0, 0, 0.1);
  }

  .ai-new-collection-product-image-{{ ai_gen_id }} {
    width: 100%;
    margin-bottom: 16px;
    border-radius: {{ block.settings.product_image_radius }}px;
    overflow: hidden;
  }

  .ai-new-collection-product-image-{{ ai_gen_id }} img {
    width: 100%;
    height: 250px;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .ai-new-collection-product-{{ ai_gen_id }}:hover .ai-new-collection-product-image-{{ ai_gen_id }} img {
    transform: scale(1.05);
  }

  .ai-new-collection-product-image-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 250px;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: {{ block.settings.product_image_radius }}px;}

  .ai-new-collection-product-image-placeholder-{{ ai_gen_id }} svg {
    width: 80px;
    height: 80px;
    opacity: 0.5;
  }

  .ai-new-collection-product-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.product_title_size }}px;
    color: {{ block.settings.product_title_color }};
    margin: 0 0 8px;
    font-weight: 600;
  }

  .ai-new-collection-product-title-{{ ai_gen_id }} a {
    color: inherit;
    text-decoration: none;
  }

  .ai-new-collection-product-title-{{ ai_gen_id }} a:hover {
    text-decoration: underline;
  }

  .ai-new-collection-product-price-{{ ai_gen_id }} {
    font-size: {{ block.settings.product_price_size }}px;
    color: {{ block.settings.product_price_color }};
    margin: 0 0 12px;
    font-weight: 500;
  }

  .ai-new-collection-product-button-{{ ai_gen_id }} {
    background-color: {{ block.settings.button_background_color }};
    color: {{ block.settings.button_text_color }};
    border: none;
    padding: 12px 24px;
    border-radius: {{ block.settings.button_border_radius }}px;
    font-size: 14px;
    font-weight: 600;
    cursor: pointer;
    text-decoration: none;
    display: inline-block;
    transition: background-color 0.3s ease;
  }

  .ai-new-collection-product-button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_color }};
  }

  .ai-new-collection-empty-state-{{ ai_gen_id }} {
    text-align: center;
    padding: 60px 20px;
    color: #666;
  }

  .ai-new-collection-empty-state-{{ ai_gen_id }} h3 {
    margin: 0 0 8px;
    font-size: 18px;
  }

  .ai-new-collection-empty-state-{{ ai_gen_id }} p {
    margin: 0;
    font-size: 14px;
  }

  @media screen and (max-width: 768px) {
    .ai-new-collection-products-{{ ai_gen_id }} {
      grid-template-columns: repeat({{ block.settings.columns_mobile }}, 1fr);
      gap: {{ block.settings.product_spacing | times: 0.75 }}px;
    }

    .ai-new-collection-title-{{ ai_gen_id }} {
      font-size: {{ block.settings.header_font_size | times: 0.8 }}px;
    }

    .ai-new-collection-container-{{ ai_gen_id }} {
      padding: 0 16px;
    }
  }
{% endstyle %}

<div class="ai-new-collection-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-new-collection-container-{{ ai_gen_id }}">
    <div class="ai-new-collection-header-{{ ai_gen_id }}">
      <h2 class="ai-new-collection-title-{{ ai_gen_id }}">
        {{ block.settings.header_text }}
      </h2>
      {% if block.settings.subtitle_text != blank %}
        <p class="ai-new-collection-subtitle-{{ ai_gen_id }}">
          {{ block.settings.subtitle_text }}
        </p>
      {% endif %}
    </div>

    {% if block.settings.featured_collection != blank %}
      <div class="ai-new-collection-products-{{ ai_gen_id }}">
        {% for product in block.settings.featured_collection.products limit: block.settings.products_limit %}
          <div class="ai-new-collection-product-{{ ai_gen_id }}"><div class="ai-new-collection-product-image-{{ ai_gen_id }}">
              {% if product.featured_image %}
                <img
                  src="{{ product.featured_image | image_url: width: 400 }}"
                  alt="{{ product.featured_image.alt | escape }}"
                  loading="lazy"
                  width="400"
                  height="250"
                >
              {% else %}
                <div class="ai-new-collection-product-image-placeholder-{{ ai_gen_id }}">
                  {{ 'product-1' | placeholder_svg_tag }}
                </div>
              {% endif %}
            </div>

            <h3 class="ai-new-collection-product-title-{{ ai_gen_id }}">
              <a href="{{ product.url }}">{{ product.title }}</a>
            </h3>

            <div class="ai-new-collection-product-price-{{ ai_gen_id }}">
              {% if product.compare_at_price > product.price %}
                <span style="text-decoration: line-through; opacity: 0.7;">
                  {{ product.compare_at_price | money }}
                </span>
                {{ product.price | money }}
              {% else %}
                {{ product.price | money }}
              {% endif %}
            </div>

            <a href="{{ product.url }}" class="ai-new-collection-product-button-{{ ai_gen_id }}">
              {{ block.settings.button_text }}
            </a>
          </div>
        {% endfor %}
      </div>
    {% else %}
      <div class="ai-new-collection-empty-state-{{ ai_gen_id }}">
        <h3>Select a collection to display</h3>
        <p>Choose a collection from the settings to showcase your new products</p>
      </div>
    {% endif %}
  </div>
</div>

