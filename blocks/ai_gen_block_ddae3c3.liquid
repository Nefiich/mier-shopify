{% doc %}
  @prompt
    Blank space
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-blank-space-{{ ai_gen_id }} {
    width: 100%;
    height: {{ block.settings.height_desktop }}px;
    background-color: {{ block.settings.background_color }};
    {% if block.settings.background_gradient != blank %}
      background: {{ block.settings.background_gradient }};
    {% endif %}
  }

  @media screen and (max-width: 749px) {
    .ai-blank-space-{{ ai_gen_id }} {
      height: {{ block.settings.height_mobile }}px;
    }
  }
{% endstyle %}

<div
  class="ai-blank-space-{{ ai_gen_id }}"
  {{ block.shopify_attributes }}
></div>

{% schema %}
{
  "name": "Blank space",
  "settings": [
    {
      "type": "header",
      "content": "Spacing"
    },
    {
      "type": "range",
      "id": "height_desktop",
      "min": 10,
      "max": 200,
      "step": 10,
      "unit": "px",
      "label": "Height on desktop",
      "default": 50
    },
    {
      "type": "range",
      "id": "height_mobile",
      "min": 10,
      "max": 150,
      "step": 10,
      "unit": "px",
      "label": "Height on mobile",
      "default": 30
    },
    {
      "type": "header",
      "content": "Background"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background color",
      "default": "#ffffff"
    },
    {
      "type": "color_background",
      "id": "background_gradient",
      "label": "Background gradient"
    }
  ],
  "presets": [
    {
      "name": "Blank space"
    }
  ]
}
{% endschema %}